    "version": "0.2.0",
    "configurations": [

        {
            "type": "msedge",
            "request": "launch",
            "name": "launch Edge against localhost",
            "url": "http://127.0.0.1:5500/",
            "webRoot": "${workspaceFolder}",
            "runtimeExecutable": "stable"
        },
        {
            "name": "Launch chrome - Local File",
            "request": "launch",
            "type": "chrome",
            "file": "${workspaceFolder}/index.html",
            "webRoot": "${workspaceFolder}"
        }
        ,
        {
            "name": "Launch edge - Local File",
            "request": "launch",
            "type": "msedge",
            "file": "${workspaceFolder}/index.html",
            "webRoot": "${workspaceFolder}",
            "runtimeExecutable": "stable"
        }
    ]
}