{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Edge - Local File",
            "request": "launch",
            "type": "chrome",
            "file": "${workspaceFolder}/index.html",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "msedge",
            "request": "launch",
            "name": "Launch Edge with Live Server",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "trace": true,
            "smartStep": true
        },
    ]
}
